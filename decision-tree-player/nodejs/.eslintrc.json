{
  "env": {
    "commonjs": true
  },
  "plugins": ["fp", "jest"],
  "extends": [
    "airbnb-base",
    "plugin:fp/recommended",
    "plugin:jest/recommended"
  ],
  "rules": {
    "complexity": ["warn", 5],
    "fp/no-mutation": [
      "error",
      {
        "commonjs": true
      }
    ],
    "max-depth": ["warn", 3],
    "max-lines": ["warn", 200],
    "max-lines-per-function": ["warn", 20],
    "max-nested-callbacks": ["warn", 2],
    "max-params": ["warn", 2]
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "rules": {
        "fp/no-nil": "off",
        "fp/no-unused-expression": "off"
      }
    }
  ]
}
